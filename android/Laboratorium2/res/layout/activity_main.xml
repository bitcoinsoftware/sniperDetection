<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#66CCFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rsilaboratorium1.MainActivity" >

    <Button
        android:id="@+id/btnGPS_MAIN"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btnCamera"
        android:layout_alignRight="@+id/btnCamera"
        android:layout_below="@+id/btnCamera"
        android:background="#999933"
        android:layout_marginTop="19dp"
        android:text="GPS" />

    <Button
        android:id="@+id/btnRecording"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="#9999FF"
        android:text="Recording" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btnRecording"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnRecording"
        android:background="#33CC99"
        android:layout_marginTop="19dp"
        android:text="Camera" />

    <Button
        android:id="@+id/btnCompass"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btnGPS_MAIN"
        android:layout_alignRight="@+id/btnGPS_MAIN"
        android:layout_below="@+id/btnGPS_MAIN"
        android:background="#FFFFFF"
        android:layout_marginTop="19dp"
        android:text="Compass" />

    <Button
        android:id="@+id/btnMonitoring"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btnCompass"
        android:layout_alignRight="@+id/btnCompass"
        android:layout_below="@+id/btnCompass"
        android:layout_marginTop="19dp"
        android:background="#FFFFFF"
        android:text="Monitoring" />

</RelativeLayout>
